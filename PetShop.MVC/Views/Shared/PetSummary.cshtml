@{
}
@model Pet
<tr>
    <td>@Model.Name</td>
    <td>@Model.Age</td>
    <td>@Model.Description</td>
    <td>@Model.Price</td>
    <td>@Model.Image</td>
    <td>@Model.CreatedDate</td>
    <td>@Model.UpdatedDate</td>
    <td>
        <a class="btn btn-primary" asp-controller="Pet" asp-action="DetailsPetById" asp-route-id="@Model.Id">
            <i class="fa-solid fa-circle-info"></i>
        </a>
        <a class="btn btn-success" asp-controller="Pet" asp-action="EditPetForm" asp-route-id="@Model.Id">
            <i class="fa-solid fa-pen-to-square"></i>
        </a>
        <a class="btn btn-danger" asp-controller="Pet" asp-action="DeletePetById" asp-route-id="@Model.Id">
            <i class="fa-solid fa-trash"></i>
        </a>
    </td>
</tr>