@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_AdminLayout";
}
@model Pet
<div class="card">
    <div class="row">
        <h1 class="col-12 fw-bold card-header">Add Pet</h1>
    </div>
    <div class="card-body">
        <form method="post" asp-controller="Pet" asp-action="InsertPet">
            <div class="text-danger fw-bold" asp-validation-summary="All"></div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Pet's Name:</label>
                <input type="text" asp-for="Name" class="form-control" >
                <div class="form-text"></div>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label">Pet's Description:</label>
                <input asp-for="Description" class="form-control" >
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label">Pet's Price:</label>
                <input asp-for="Description" class="form-control" >
            </div>
            <div class="mb-3">
                <label asp-for="Image" class="form-label">Pet's Image:</label>
                <input asp-for="Image" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="CreatedDate" class="form-label">Pet's Created Date:</label>
                <input asp-for="CreatedDate" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="UpdatedDate" class="form-label">Pet's Updated Date:</label>
                <input asp-for="UpdatedDate" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>