@{
    Layout = "_AdminLayout";
}
@model IEnumerable<Pet>
<div class="card">
    <div class="row">
        <h1 class="col-12 fw-bold card-header">Pets Table</h1>
    </div>
    <div class="row mt-2 mb-0">
        <div class="col-10"></div>
        <div class="col-2">
            <a class="btn btn-success float-end fw-bold" asp-controller="Pet" asp-action="CreatePetForm">Add new</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Description</th>

                    <th>Price</th>
                    <th>Image</th>
                    <th>Created Date</th>
                    <th>Updated Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model ?? Enumerable.Empty<Pet>())
                {
                    <partial name="PetSummary" model="p"></partial>
                }
            </tbody>
        </table>
    </div>
</div>
